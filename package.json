{
  "name": "meroshare-ease",
  "displayName": "MeroshareEase",
  "version": "0.0.1",
  "private": "true",
  "description": "A browser extension to streamline daunting tasks within Meroshare.",
  "packageManager": "pnpm@9.15.1",
  "type": "module",
  "scripts": {
    "dev": "pnpm clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:get-ready": "node scripts/get-ready.js",
    "dev:web": "vite",
    "dev:background": "vite build --mode development --config vite.config.background.js",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "ansis": "^3.4.0",
    "chokidar": "^4.0.3",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "unplugin-auto-import": "^0.19.0",
    "vite": "^6.0.5",
    "vue": "^3.5.13",
    "web-ext": "^8.3.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
